{
  "$defs": {
    "ModelProvider": {
      "description": "Supported LLM providers.",
      "enum": [
        "openai",
        "anthropic",
        "google",
        "deepseek",
        "custom"
      ],
      "title": "ModelProvider",
      "type": "string"
    }
  },
  "additionalProperties": true,
  "description": "Provider-specific configuration for LLM calls.",
