{
  "schema_version": "0.1",
  "id": "flow-0001-slack-btc",
  "name": "Slack BTC Alert",
  "nodes": [
    {
      "id": "ai_get_price",
      "type": "ai",
      "model": "gpt-3.5-turbo",
      "prompt": "Fetch current BTC price in USD as JSON {\"price\": number}",
      "llm_config": {"temperature": 0.0},
      "output_schema": {"price": "float"}
    },
    {
      "id": "cond_price_high",
      "type": "condition",
      "expression": "price > 66000",
      "dependencies": ["ai_get_price"],
      "input_mappings": {
        "price": {"source_node_id": "ai_get_price", "source_output_key": "price"}
      },
      "true_branch": ["tool_notify"],
      "false_branch": []
    },
    {
      "id": "tool_notify",
      "type": "tool",
      "tool_name": "slack_post",
      "tool_args": {
        "channel": "#trading-alerts",
        "text": "BTC price just crossed $66k!"
      },
      "dependencies": ["cond_price_high"]
    }
  ],
  "edges": [
    {"source": "ai_get_price", "target": "cond_price_high"},
    {"source": "cond_price_high", "target": "tool_notify"}
  ],
  "ui": {}
} 