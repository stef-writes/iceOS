{
  "schema_version": "0.1",
  "id": "00000000-0000-0000-0000-000000000001",
  "nodes": [
    {
      "id": "get_price",
      "type": "ai",
      "name": "Get BTC Price",
      "model": "gpt-3.5-turbo",
      "prompt": "Return the current BTC price in USD as JSON: {\"price\": <value>}",
      "output_schema": {
        "price": "number"
      },
      "llm_config": {
        "provider": "openai",
        "model": "gpt-3.5-turbo",
        "temperature": 0.0
      }
    },
    {
      "id": "if_price_high",
      "type": "condition",
      "name": "Is price high?",
      "dependencies": ["get_price"],
      "expression": "price > 66000",
      "input_mappings": {
        "price": {
          "source_node_id": "get_price",
          "source_output_key": "price"
        }
      },
      "true_branch": ["send_slack_alert"],
      "false_branch": []
    },
    {
      "id": "send_slack_alert",
      "type": "tool",
      "name": "Send Slack Alert",
      "dependencies": ["if_price_high"],
      "tool_name": "slack_post",
      "tool_args": {
        "channel": "#alerts",
        "text": "BTC price above threshold! Price: {price}"
      }
    }
  ]
} 